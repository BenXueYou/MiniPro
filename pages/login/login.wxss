/* pages/register/register.wxss */

.registerClass {
  width: 100vw;
  height: 100vh;
  background-color: #fff;
  position: relative;
}

.imagesClass {
  width: 30%;
  height: 5%;
  position: absolute;
  left: 32%;
  top: 16.5%;
}

.fromClass {
  position: absolute;
  left: 0;
  top: 39%;
  text-align: left;
}

.form-group-cell {
  width: 82.7vw;
  height: 8.2%;
  margin: 0 8.7%;
  border-bottom: 1px solid #e5e5e5;
}

.telephone_icon {
  width: 4.3%;
  height: 3.2vh;
  margin-right: 3.7%;
}

.code-tips {
  font-family: PingFangSC-Regular;
  font-size: 12px;
  color: #038dff;
  letter-spacing: 0.04px;
}

.code-tips-box {
  /* background-color: rgba(3, 141, 255, 0.1); */
  width: 6.1%;
  height: 1.2vh;
}
.code-tips-box image{
  width: 100%;
  height: 100%;
}

.submitBtn {
  width: 82.7%;
  position: absolute;
  left: 8.6%;
  bottom: 26.9%;
  border-radius: 44px;
  font-family: PingFangSC-Medium;
  font-size: 18px;
  color: #fff;
  letter-spacing: 0.05px;
  text-align: center;
}

.bottom-tips {
  width: 100%;
  position: absolute;
  left: 0px;
  bottom: 3.4%;
  text-align: center;
}

.check-box-class {
  transform: scale(0.6, 0.6);
}

.tips-txt {
  font-family: PingFangSC-Regular;
  font-size: 12px;
  color: #848498;
  letter-spacing: 0.04px;
}

.tips-item-txt {
  color: #299dff;
}

.checked-group-class {
  display: inline-block;
}


.loginTapView {
  width: 82.7%;
  position: absolute;
  right: 8.6%;
  bottom: 24.6%;
  text-align: center;
  font-family: "PingFangSC-Regular";
  font-size: 12px;
  color: #848498;
  letter-spacing: 0.04px;
}
.headerBg{
  width: 54.6%;
  height: 13.5vh;
  position: absolute;
  left: 22.7%;
  top: 12.5%;
}
