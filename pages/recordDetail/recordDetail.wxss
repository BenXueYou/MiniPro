/* pages/approvalDetail/approvalDetail.wxss */

.body {
  width: 100vw;
  height: 100%;
  /* background-color: #ffffff; */
}

.body-header {
  position: relative;
}

.action {
  position: absolute;
  top: 5px;
  right: 5px;
}

.status1, .status2, .status3 {
  position: absolute;
  right: 40rpx;
  top: 50%;
  transform: translateY(-50%);
  /* min-width: 120rpx; */
  padding: 0px 30rpx;
  height: 50rpx;
  line-height: 50rpx;
  border-radius: 25px;
  text-align: center;
  color: #fff;
  font-size: 23rpx;
}

.status1 {
  background: #eaaf17;
}

.status2 {
  background: #25d298;
}

.status3 {
  background: #ff9998;
}

.body-header {
  width: 100%;
  height: 13.3%;
}

.yuyue {
  position: absolute;
  left: 40rpx;
  top: 50%;
  transform: translateY(-50%);
  z-index: 100;
}

.yuyue .passIcon {
  display: inline-block;
  vertical-align: middle;
  width: 5vh;
  height: 5vh;
}

.yuyue .yuyuetext {
  vertical-align: middle;
  display: inline-block;
  color: #fff;
  text-indent: 15px;
}

.top-images {
  width: 100%;
  height: 13.3vh;
  text-align: center;
}

.body-main1 {
  width: 100%;
  background: #fff;
}

.body-main2 {
  width: 100%;
  background: #fff;
}

.cu-form-group {
  border-bottom: 1px solid #e5e5e5;
  font-family: 'PingFangSC-Regular';
  font-size: 28rpx;
  color: #303655;
  letter-spacing: -0.62px;
  width: 100%;
  height: 7.5vh;
  padding: 0 6.7%;
}

.cu-form-group+.cu-form-group {
  border-top: 0rpx solid #eee;
}

.yuyue1 {
  font-size: 24rpx;
  color: #038dff;
  background-color: rgba(3, 141, 255, 0.08);
  border: 1px solid #038dff;
  border-radius: 12px;
  height: 30px;
  line-height: 30px;
}

.yuyue2 {
  width: 42.7%;
  border-radius: 44px;
  box-shadow: 0 4px 10px 0 rgba(40, 146, 255, 0.30);
  height: 6.6vh;
  font-size: 30rpx;
}

.bottomBtnBox {
  display: flex;
  justify-content: space-around;
  background: #fff;
  padding: 2.1% 0;
}

.cell-class {
  width: 100%;
  height: 33%;
  padding: 2% 6%;
  border: 1px solid #e5e5e5;
}

.cell-label {
  width: 70%;
  height: 80%;
  display: inline-block;
  /* display: inherit; */
  box-sizing: border-box;
  vertical-align: middle;
}

.cell-image {
  width: 25%;
  height: 100%;
  box-sizing: border-box;
  vertical-align: middle;
  margin-left: 4.9%;
}

.myhead {
  justify-content: flex-start;
  position: relative;
  width: 100%;
  height: 13.8%;
  padding: 3.7% 6.1%;
}

.myhead .head-images {
  width: 60px;
  height: 60px;
  border-radius: 50%;
}

.personInfo {
  padding-left: 30px;
}

.personInfo .personName {
  /* line-height: 20px; */
  font-family: 'PingFangSC-Medium';
  font-size: 36rpx;
  color: #303655;
  margin-bottom: 13px;
}

.personInfo .personPhone {
  opacity: 0.7;
  font-family: 'PingFangSC-Regular';
  font-size: 24rpx;
  color: #404667;
}

.arrow {
  position: absolute;
  top: 50%;
  right: 0px;
  width: 100rpx;
  height: 100rpx;
  transform: translateY(-50%);
}

.arrow::before {
  position: absolute;
  top: 0;
  right: 30rpx;
  bottom: 0;
  display: block;
  margin: auto;
  width: 30rpx;
  height: 30rpx;
  color: grey;
  content: "\e6a3";
  text-align: center;
  font-size: 33rpx;
  font-family: "cuIcon";
  line-height: 30rpx;
}

.cu-dialog {
  width: 100vw;
  height: calc(100vw + 50px);
  padding: 4.1% 2vw 0;
  text-align: center;
  box-sizing: border-box;
  /* border: 1px solid red; */
}

.canvasBox {
  margin: 10px auto 0px;
  position: relative;
}

.mycanvs {
  /* position: absolute;
  left: 10;
  top: 10px; *//* width: 150px;
  height: 150px; */
  width: 94vw;
  height: 94vw;
  /* display: block; */
  margin: 15px auto 0;
  /* z-index: -1; *//* display: none; */
}

.mycanvs canvas {
  width: 100%;
  height: 100%;
}

.canvasBox .qrCodeImageBox {
  width: 94vw;
  height: 94vw;
  position: absolute;
  top: 1.5vw;
  left: 1vw;
  z-index: 99;
  background-color: #fff;
}

.canvasBox .qrCodeImageBox image {
  width: 100%;
  height: 100%;
  z-index: 100;
  background-color: #fff;
}

.canvasExpBox {
  width: 100vw;
  height: 100vw;
  margin: 10px auto 0px;
}

.center {
  text-align: center;
}

.tipsText {
  position: absolute;
  top: calc(100vw + 10px);
  left: 0%;
  width: 100%;
  line-height: 30px;
}

.showExpBox {
  display: block;
}

.hideBox {
  display: none;
}

.daohang {
  display: inline-block;
}

.daohang .fangwen {
  vertical-align: middle;
  width: 15px;
  height: 15px;
}
