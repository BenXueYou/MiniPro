/* pages/approvalDetail/approvalDetail.wxss */

.body {
  width: 100vw;
  height: 100%;
  /* background-color: #ffffff; */
}

.body-header {
  width: 100%;
  height: 13.8%;
  position: relative;
}

.top-images {
  width: 100%;
  height: 13.7vh;
  text-align: center;
  position: relative;
}

.top-icon {
  width: 66rpx;
  height: 66rpx;
  position: absolute;
  top: 15%;
  left: 50rpx;
}

.infoWrap {
  position: absolute;
  top: 50%;
  left: 0rpx;
  transform: translateY(-50%);
  color: #fff;
  line-height: 50rpx;
  font-size: 30rpx;
}

.body-main1 {
  width: 100%;
  background: #fff;
  margin-bottom: 1.4%;
}

.body-main2 {
  width: 100%;
  background: #fff;
  margin-bottom: 1.4%;
}

.body-main3 {
  width: 100%;
  background: #fff;
  margin-bottom: 2.8%;
}

.cu-form-group {
  border-bottom: 1px solid #e5e5e5;
  font-family: 'PingFangSC-Regular';
  font-size: 28rpx;
  color: #303655;
  letter-spacing: -0.62px;
  width: 100%;
  height: 7.5vh;
  padding: 0 6.7%;
}

.cu-form-group+.cu-form-group {
  border-top: 0rpx solid #eee;
}

.yuyue {
  position: absolute;
  left: 40rpx;
  top: 50%;
  transform: translateY(-50%);
  z-index: 100;
}

.yuyue .passIcon {
  display: inline-block;
  vertical-align: middle;
  width: 5vh;
  height: 5vh;
}

.yuyue .yuyuetext {
  vertical-align: middle;
  display: inline-block;
  color: #fff;
  text-indent: 15px;
}

.yuyue1 {
  width: 42.7%;
  border-radius: 44px;
  background-color: #038dff;
  box-shadow: 0 4px 10px 0 rgba(40, 146, 255, 0.30);
  height: 6.6vh;
  line-height: 6.6vh;
  font-size: 30rpx;
}

.yuyue2 {
  width: 42.7%;
  border-radius: 44px;
  box-shadow: 0 4px 10px 0 rgba(40, 146, 255, 0.30);
  height: 6.6vh;
  line-height: 6.6vh;
  font-size: 30rpx;
  color: #2892ff;
}

.title {
  min-width: 7em;
}

.bottomBtnBox {
  display: flex;
  justify-content: space-around;
}

.cell-class {
  width: 100%;
  height: 33%;
  padding: 2% 6%;
  border: 1px solid #e5e5e5;
}

.cell-label {
  width: 70%;
  height: 80%;
  display: inline-block;
  /* display: inherit; */
  box-sizing: border-box;
  vertical-align: middle;
}

.cell-image {
  width: 25%;
  height: 100%;
  box-sizing: border-box;
  vertical-align: middle;
  margin-left: 4.9%;
}

.myhead {
  justify-content: flex-start;
  position: relative;
  width: 100%;
  height: 13.8%;
  padding: 3.7% 6.1%;
}

.myhead .head-images {
  width: 15.5%;
  height: 8%;
  border-radius: 44px;
}

.personInfo {
  padding-left: 30px;
}

.personInfo .personName {
  /* line-height: 20px; */
  font-family: 'PingFangSC-Medium';
  font-size: 36rpx;
  color: #303655;
  margin-bottom: 13px;
}

.personInfo .personPhone {
  opacity: 0.7;
  font-family: 'PingFangSC-Regular';
  font-size: 24rpx;
  color: #404667;
}

.infoWrap .status {
  display: inline-block;
  font-size: 12px;
  padding: 10rpx 30rpx;
  border-radius: 25px;
  font-family: "PingFangSC-Regular";
  z-index: 500;
  margin-left: 580rpx;
}

.infoWrap .success {
  color: #fff;
  background: #25d298;
}

.infoWrap pedding {
  color: #fff;
  background-color: #eaaf17;
}

.infoWrap .refuse {
  color: #ff9998;
  background-color: rgba(255, 153, 152, 0.15);
}

.infoWrap .info-text {
  width: 100px;
  height: 50px;
  position: absolute;
  top: 25%;
  left: 150rpx;
}

.status1, .status2, .status3 {
  position: absolute;
  right: 40rpx;
  top: 50%;
  transform: translateY(-50%);
  /* min-width: 120rpx; */
  padding: 0px 30rpx;
  height: 50rpx;
  line-height: 50rpx;
  border-radius: 25px;
  text-align: center;
  color: #fff;
  font-size: 23rpx;
}

.status1 {
  background: #eaaf17;
}

.status2 {
  background: #25d298;
}

.status3 {
  background: #ff9998;
}

.arrow {
  position: absolute;
  top: 50%;
  right: 30rpx;
  width: 100rpx;
  transform: translateY(-50%);
}

.arrow::before {
  position: absolute;
  top: 0;
  right: 30rpx;
  bottom: 0;
  display: block;
  margin: auto;
  width: 30rpx;
  height: 30rpx;
  color: #fff;
  content: "\e6a3";
  text-align: center;
  font-size: 54rpx;
  font-family: "cuIcon";
  line-height: 30rpx;
}
