view {
  width: 100vw;
  position: relative;
  height: 100%;
  background-color: #fff;
}

.body-header {
  position: absolute;
  top: 0;
  left: 0;
}

.top-images {
  width: 100%;
  height: 40vh;
  text-align: center;
}

.body-main {
  position: absolute;
  left: 0;
  top: 40vh;
  width: 100%;
  height: 40%;
  background: #fff;
}

.yuyue {
  width: 88%;
  position: absolute;
  left: 50%;
  bottom: 8.2%;
  transform: translate(-50%, 0%);
  border-radius: 44px;
  background-color: #038dff;
  box-shadow: 0 4px 10px 0 rgba(40, 146, 255, 0.30);
  height: 6.6vh;
  font-size: 30rpx;
  line-height: 6.6vh;
}

.cell-class {
  width: 100%;
  height: 33%;
  padding: 2% 6%;
  border: 1px solid #e5e5e5;
}

.cell-label {
  width: 70%;
  height: 80%;
  display: inline-block;
  /* display: inherit; */
  box-sizing: border-box;
  vertical-align: middle;
}

.cell-image {
  width: 25%;
  height: 100%;
  box-sizing: border-box;
  vertical-align: middle;
  margin-left: 5%;
}
