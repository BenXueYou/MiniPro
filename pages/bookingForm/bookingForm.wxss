.form {
  margin-top: 110px;
}

.arrow {
  position: absolute;
  top: 50%;
  right: 0px;
  width: 100rpx;
  height: 100rpx;
  transform: translateY(-50%);
}

.arrow::before {
  position: absolute;
  top: 0;
  right: 30rpx;
  bottom: 0;
  display: block;
  margin: auto;
  width: 30rpx;
  height: 30rpx;
  color: grey;
  content: "\e6a3";
  text-align: center;
  font-size: 33rpx;
  font-family: "cuIcon";
  line-height: 30rpx;
}

.submit {
  width: calc(100% - 20px);
  margin: 20px auto;
}

.myhead {
  justify-content: flex-start;
  position: relative;
  width: 100%;
  height: 15%;
  padding: 3.7% 6.1%;
}

.myhead .head-images {
  width: 80px;
  height: 80px;
  border-radius: 50%;
}

.personInfo {
  padding-left: 30px;
}

.personInfo .personName {
  /* line-height: 20px; */
  font-family: 'PingFangSC-Medium';
  font-size: 36rpx;
  color: #303655;
  margin-bottom: 13px;
}

.personInfo .personPhone {
  opacity: 0.7;
  font-family: 'PingFangSC-Regular';
  font-size: 24rpx;
  color: #404667;
}

.submitBtn {
  width: 88%;
  height: 6.6vh;
  margin-left: 6%;
  background: #038dff;
  box-shadow: 0 4px 10px 0 rgba(40, 146, 255, 0.30);
  border-radius: 44px;
  font-family: PingFangSC-Medium;
  font-size: 30rpx;
  color: #fff;
  letter-spacing: 0.05px;
  text-align: center;
}
